<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h2>Sign up for Pro</h2>
          <p>Sign up for access to the community and contact information for $10 per month.</p>
        <% else %>
          <h2>Basic Signup</h2>
          <p>Sign up for free and get basic access to the community.</p>      
        <% end %>
      </div>
      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render"basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>